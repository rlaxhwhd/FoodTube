generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ===== Auth.js 필수 모델 =====
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String? @db.Text
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ===== 앱 모델 =====
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?   @db.Text
  plan          String    @default("free")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts    Account[]
  sessions    Session[]
  scanJobs    ScanJob[]
  restaurants Restaurant[]

  @@map("users")
}

model ScanJob {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  sourceType      String   @map("source_type")
  playlistId      String?  @map("playlist_id")
  playlistTitle   String?  @map("playlist_title")
  status          String   @default("pending")
  totalVideos     Int      @default(0) @map("total_videos")
  filteredCount   Int      @default(0) @map("filtered_count")
  restaurantCount Int      @default(0) @map("restaurant_count")
  errorMessage    String?  @map("error_message") @db.Text
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurants Restaurant[]

  @@map("scan_jobs")
}

model Restaurant {
  id             String    @id @default(cuid())
  userId         String    @map("user_id")
  jobId          String    @map("job_id")
  videoId        String    @map("video_id")
  videoTitle     String    @map("video_title") @db.Text
  thumbnailUrl   String?   @map("thumbnail_url") @db.Text
  channelName    String?   @map("channel_name")
  restaurantName String    @default("미확인 맛집") @map("restaurant_name")
  region         String?   @default("미확인")
  foodType       String?   @map("food_type")
  publishedAt    DateTime? @map("published_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  scanJob ScanJob @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([userId, videoId, restaurantName])
  @@map("restaurants")
}
